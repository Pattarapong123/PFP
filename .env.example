# ===== Database =====
# SQLite (dev)
DATABASE_URL="file:./prisma/dev.db"
#DATABASE_URL="mysql://USER:PASSWORD@localhost:3306/DBNAME"
#DATABASE_URL="postgresql://user:pass@host:5432/dbname"

# ===== Server =====
PORT=3000
NODE_ENV=development

# ใช้สำหรับลิงก์ absolute ในอีเมล/รีไดเรกต์ (ตอน dev ใช้ localhost)
APP_BASE_URL="http://localhost:3000"

# ใช้ Prisma engine แบบ WebAssembly เพื่อลดปัญหา DLL บน Windows
PRISMA_CLIENT_ENGINE_TYPE=wasm

# ===== Session / Security =====
SESSION_SECRET="change_me_to_a_long_random_string"
TRUST_PROXY=0
FRONTEND_ORIGIN=

# ===== Admin (ENV admin สำหรับ dev เท่านั้น) =====
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"   # plain text เพราะโค้ดเทียบตรง

# ===== Bank / Payment =====
